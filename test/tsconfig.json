{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "target": "es2016",
    "declaration": true,
    "module": "ESNext",
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "declarationDir": "./dist",
    "lib": [
      "dom",
      "es2021.promise"
    ]
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
